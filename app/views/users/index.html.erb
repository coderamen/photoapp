
<div class="container" style="margin-top: 40px;">
  <h1 align=center>All Users</h1>
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-md-4">
      <div class="well" align="center">
        <%= link_to gravatar_for(user), user_path(user) %>
        <div class="pic-title">
          <%= link_to user.username, user_path(user) %>
        </div>
        <small><%= pluralize(user.pics.count, "pic") if user.pics %></small>
        <% if logged_in? and current_user.admin? %>
        <br>
        <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their pics?" }, class: 'btn btn-danger btn-sm', style: 'color: #fff; margin-top: 10px;' %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
