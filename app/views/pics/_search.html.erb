<div id="SearchForm">
      <%= form_for pics_path, method: :get do %>
      <div class="input-group">
        <%= text_field_tag :query, params[:query], placeholder: "Look pics", class: "form-control" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", title: nil, about: nil, class: "btn btn-inverse", style: "background: #000; color: #fff;" %>
        </span>
      </div>
      <% end %>
  </div>
