  <%= form_for @pic, remote: true do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title, class: "form-control post_title" %>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, class: "form-control post_content" %>
  <br>
  <%= f.label :photo %>
  <br>
  <%= f.file_field :photo, class: "form-control" %>
  <br>
  <%= f.label :city %>
  <br>
  <%= f.text_field :city, class: "form-control" %>
  <br>
  <%= f.submit "Post Pic", class: "btn btn-inverse", style: "background: #000; color:#ccc;" %>
  <% end %>
