<div id="pic_show" class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default" style="margin-top: 30px;">
      <div class="panel-heading">
        <%= image_tag @pic.photo %>
      </div>
      <div class="panel-body">
        <h1><%= @pic.title %></h1>
        <p><%= @pic.description %></p>
      </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              <p style="margin: 10px 10px 10px 5px"><% @user %>by<%= @pic.user.email %></p>
            </div>
              <div class="col-md-6">
              <div class="btn-group pull-right">
                <% if logged_in? && (current_user == @pic.user || current_user.admin?) %>
                <%= link_to "Edit", edit_pic_path , class: "btn btn-info" %>
                <%= link_to "Delete", pic_path, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
