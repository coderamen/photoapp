<div id="SearchForm">
  <%= form_tag pics_path, method: :get do %>
    <div class="input-group">
      <%= text_field_tag :query, params[:query], placeholder: "Look pics", class: "form-control" %>
      <span class="input-group-btn">
        <%= submit_tag "Search", class: "btn btn-inverse", style: "color: #ccc; background: #000" %>
      </span>
    </div>
  <% end %>
</div>
